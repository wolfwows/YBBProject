/* pages/ucenter/integral/index.wxss */
.section_hd{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.top_area{
  text-align: center;
  position: relative;
  padding: 20rpx 0;
}
.top_area .title{
  font-size: 28rpx;
  color: #4f4f4f;
  line-height: 28rpx;
}
.inte_detail{
  position: absolute;
  display: inline-block;
  right: 20rpx;
  top: 50%;
  margin-top: -8rpx;
  font-size: 24rpx;
  color: #959595;
  line-height: 24rpx;
}
.content_area{
  background-color: #33c3db;
  width: 100%;
  height: 310rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.integral{
  position: relative;
  display: inline-block;
  line-height: 52rpx;
}
.integral .num{
  color: #fff;
  font-size: 52rpx;
  line-height: 52rpx;
}
.integral .txt{
  position: absolute;
  right: 0;
  bottom: 0;
  transform: translateX(100%);
  color: #e0e0e0;
  font-size: 24rpx;
}
.integral_exchange{
  height: 60rpx;
  width: 220rpx;
  background: #2a9db0;
  color: #71dff0;
  font-size: 28rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}
.integral_title{
  padding: 20rpx 0 20rpx 16rpx;
  font-size: 28rpx;
  color: #4f4f4f;
  border-bottom: 1rpx solid #f4f4f4;
}
.section_bd{
  padding:20rpx;
}
.raiders_header{
  display: flex;
  align-items: center;
  height: 84rpx;
  padding: 20rpx 0 0 0;
  position: relative;
}
.raiders_header image{
  width: 84rpx;
  height: 84rpx;
  padding: 0 20rpx;
}
.raiders_header text{
  font-size: 28rpx;
  display: block;
}
.receive{
  position: absolute;
  right: 20rpx;
  border-radius: 30rpx;
  width: 136rpx;
  height: 60rpx;
  color: #fff;
  background: #fdb045;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
}
.raiders_content{
  padding-left: 100rpx;
  padding-right: 20rpx;
  margin-bottom: 30rpx;
}
.raiders_content text{
  font-size: 24rpx;
  color: #959595;
  display: block;
}
