/* pages/lesson/index.wxss */
.container{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.toptab{
  display: flex;
  padding:0 10px;
  background:#f4f4f4;
}

.no_order.hidden,.order_box.hidden{
  display: none;
}
.no_order{
  position: absolute;
  top: 80rpx;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.no_order image{
  width: 326rpx;
  height: 200rpx;
}
.no_order text{
  font-size: 26rpx;
  color: #959595;
}

.tab_item{
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #959595;
  line-height: 36rpx;
  padding:20rpx 0rpx;
  border-bottom: 1rpx solid #e0e0e0;
  transition: 0.4s;
  position: relative;
}

.tab_item.active{
  color: #33c3db;
}
.tab_item.active:after{
  transition: 0.4s;
}
.tab_item.active:after{
  content: "";
  height: 2rpx;
  position: absolute;
  bottom: -1rpx;
  left: 0;
  right: 0;
  border-bottom: 2rpx solid #33c3db;
}
.order_box{
  background: #f4f4f4;
  overflow: hidden;
}
.order_detail{
  padding: 10rpx 20rpx;
  background: #fff;
}
.order_detail text{
  display: block;
  font-size: 24rpx;
  color: #959595;
}
.course .course_box{
  background: #f4f4f4;
}
.course_box:after{
  display: none;
}
.course_tip__img{
  position: absolute;
  top:-1rpx;
  right:-4rpx;
  width: 62rpx;
  height: 40rpx;
}
.tea_des{
  line-height:46rpx;
}
.stu_les{
  /* display: none; */
}
.les_price{
  /* float: none; */
  color: #f85934;
  /* line-height: 32rpx; */
}
.lasted_learn{
  float: right;
}
.conform_box{
  display: block;
  overflow: hidden;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.user_integral{
  font-size: 26rpx;
  color: #959595;
  float: left;
  line-height: 70rpx;
}
.user_integral_count{
  font-size: 26rpx;
  color: #f85934;
}
.conform_btn{
  float: right;
}
.btn{
  width: 180rpx;
  height: 70rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 70rpx;
}
.refund{
  color: #4f4f4f;
  background: #e4ecee;
}
.cancel{
  color: #4f4f4f;
  background: #e4ecee;
  float:left;
}
.confirm{
  color: #f4f4f4;
  background: #33c3db;
  float:left;
  margin-left: 30rpx;
}
